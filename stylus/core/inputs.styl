*:focus
  outline none
*
  -webkit-tap-highlight-color transparent

input, button
  appearance none
  outline none
  margin 0
  padding 0
  border none
  background-color transparent
  font-size inherit

textarea
  appearance none
  outline none
  margin 0
  padding 0
  border none
  resize none
  overflow auto
  
  