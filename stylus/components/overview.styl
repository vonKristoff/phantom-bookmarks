.overview_container
	transition all .3s
	margin 0 auto
	max-width 768px
	width 100%
	&.has-blur
		filter blur(1em)
	.bookmarks_container
		padding 4em 0
		.collection
			color coral
		.action-add
			display flex
			justify-content center
			margin 2em 0
			cursor pointer
			span
				margin-left 1em
	.bookmark_item
		display flex
		background-color #333
		padding 1.25em 2.5em
		margin-bottom 1px
		[class^="action"]
			display flex
			flex 1
			align-items center
			cursor pointer
			&:hover
				color #fffc50
				a
					color #fffc50
			[class^="fa"]
				margin 0 1em
		.action-link
			flex 0 1 100%
			:first-child
				margin-left 0
			&.is-deactivated
				pointer-events none
				opacity .5
		&:first-child
			border-top-right-radius 2em
		&:last-child
			border-bottom-left-radius 2em
		
.overview_container	a
	color coral
	&:visited
		color coral

.bookmarks_container
	.action-add
		align-items center
		border-radius 2em
		padding 1em 2em
		background transparent
		border .125em solid #333
		&:hover
			color coral
			border .125em solid coral
		